<h2 class="login-title">Forgot your password?</h2>
<section class="container-login">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'login' }) do |f| %>
    <%= devise_error_messages! %>
    <div class="fields">
    <%= f.email_field :email, autofocus: true, placeholder: 'email' %>
    </div>
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'btn-primary' %>
    </div>
  <% end %>
</section>

