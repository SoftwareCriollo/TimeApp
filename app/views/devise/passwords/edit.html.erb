<h2 class="login-title">Change your password</h2>
<section class="container-login">
<% @user ||= resource %>
  <%= simple_form_for(@user, :url => api_change_password_path(params[:reset_password_token]), :html => { :method => :put, class: "login" }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |message| %>
        <div><%= @user.errors.full_messages%></div>
      <% end %>
    <% end %>
    <div class="fields">
      <div class="field">
        <%= f.password_field :password, autofocus: true, placeholder: "New password", autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation,placeholder:"Confirm new password", autocomplete: "off" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Change my password",class: 'btn-primary' %>
    </div>
  <% end %>
</section>
